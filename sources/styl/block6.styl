.block6
  width 100%
  height auto
  padding-bottom 56px
  @media (min-width 768px)
    padding-bottom 71px
  @media (min-width 1280px)
    padding-bottom 80px

  .block6-content
    width 100%
    height auto


    .block6-head
      width 100%
      height auto

      h2
        margin-bottom 40px

    .answers-blocks
      width 100%
      height auto
      justify-content center
      align-items center
      flex-flow row wrap
      @media (min-width 768px)
        justify-content space-between
        align-items flex-start
        max-width 820px


      .answer-block
        width 282px
        height auto
        background-color #f8f8f8
        margin-bottom 32px
        @media (min-width 768px)
          width 48%
          height 520px
        @media (min-width 1280px)
          width 390px
          height 580px

        .answer-img
          width 100%
          height 173px
          @media (min-width 768px)
            width 100%
            height 209px
          @media (min-width 1280px)
            width 100%
            height 240px

          img
            width 100%

        .answer-text
          padding 32px 12px 29px 12px
          display flex
          display -webkit-flex
          justify-content flex-start
          align-items flex-start
          flex-direction column
          @media (min-width 768px)
            padding 41px 20px 40px 20px
          @media (min-width 1280px)
            padding 41px 40px 45px 40px

          h2
            margin-bottom 16px
            font-size 20px

          hr
            margin 0 0 24px 0

          p
            color #000000
            font-family Rubik
            font-size 14px
            font-weight 300
            letter-spacing 1px
            margin-bottom 8px
            @media (min-width 768px)
              font-size 16px
              line-height 18px

      .sertificate-block
        width 100%
        height auto
        background-color #f8f8f8
        padding 32px 12px 29px 12px
        box-sizing border-box
        @media (min-width 768px)
          padding 41px 20px 45px 20px
        @media (min-width 1280px)
          padding 41px 40px 45px 40px

        h2
          margin-bottom 16px
          font-size 20px
          text-align left

        hr
          margin 0 0 24px 0

        .discription-sertificate
          width 100%
          height auto
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          flex-direction column
          @media (min-width 768px)
            flex-direction row
            justify-content space-between
            align-items flex-start



          .discription-text
            width 100%
            height auto
            margin-bottom 24px
            @media (min-width 768px)
              width 80%

            p
              color #000000
              font-family Rubik
              font-size 14px
              font-weight 300
              letter-spacing 1px
              margin-bottom 8px
              @media (min-width 768px)
                font-size 16px
                line-height 17px

          .sertificate-img
            width 103px
            height 137px



            img
              width 100%





