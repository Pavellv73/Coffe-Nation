.block3
  width 100%
  height auto
  overflow hidden

  .block3-content
    width 100%
    height auto
    flex-direction column
    justify-content center
    align-items center
    padding-top 71px
    padding-bottom 88px
    position relative
    @media (min-width 1280px)
      flex-direction row
      padding-top 0

    .bg
      width 100%
      height 411px
      position absolute
      top 53px
      left 68px
      z-index 0
      background-color #f8f8f8
      @media (min-width 1280px)
        height 359px
        top 92px


    .block3-head
      z-index 1
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items flex-start
      flex-direction column
      @media(min-width 1280px)
        width 55%

      h2
        margin-bottom 16px
        font-weight 600

      hr
        margin 0 0 32px 0

      p
        color #2d2d2d
        font-family Rubik
        font-size 14px
        font-weight 100
        letter-spacing 1px
        line-height 16px
        margin-bottom 8px
        @media (min-width 768px)
          font-size 18px
          font-weight 100
          margin-bottom 12px

      .readmore-text
        display none

      a
        color #c5a548
        font-family Rubik
        font-size 16px
        font-weight 500
        margin-top 26px
        &:hover
          color #c5881f


    .about-video
      width 100%
      height 257px
      background-image url("img/b3-bg.png")
      background-position calc(50vw - 157px) center
      background-repeat no-repeat
      background-size 100%
      z-index 1
      margin-top 32px
      padding-top 30px
      box-sizing border-box
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      @media (min-width 768px)
        height 441px
        background-size auto 441px
        background-position calc(50vw - 240px) center
      @media (min-width 1280px)
        height 472px
        width 45%
        background-position 63% center

      img
        margin-bottom 14px

      p
        color #fff

#video-pop
  display none

.video-pop
  width 100%
  display flex!important
  display -webkit-flex
  justify-content center
  align-items center


  iframe
    width 100%
    height 315px
    @media (min-width 768px)
      height 420px
    @media (min-width 1280px)
      width 60%
      height 500px




