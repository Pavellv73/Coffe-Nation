footer
  width 100%
  height auto
  background-color #4e3227




  .footer-content
    width 100%
    height auto
    justify-content center
    align-items center
    flex-direction column
    padding 16px 0 19px 0
    @media (min-width 768px)
      flex-direction row
      justify-content space-between
      align-items center

    .politic
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      margin-bottom 20px
      @media (min-width 768px)
        margin 0
        order 1
        align-items flex-start

      h3
        color #ffffff
        @media (min-width 768px)
          font-size 20px


      a
        color #ffffff
        font-family Rubik
        font-size 12px
        line-height 13px
        font-weight 300
        text-decoration underline
        text-align center

    .tel
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      margin-bottom 20px
      @media (min-width 768px)
        margin 0
        order 3
        align-items flex-end

      a
        color #ffffff
        font-family "Intro"
        font-size 16px
        line-height 17px
        font-weight 400
        text-transform uppercase
        @media (min-width 768px)
          font-size 20px
          font-weight 600
          margin-bottom 4px

      p
        color #ffffff
        font-family "Intro"
        font-size 12px
        line-height 13px
        font-weight 400
        text-transform uppercase
        @media (min-width 768px)
          font-size 11px
          font-weight 400

    .nt-logo
      @media (min-width 768px)
        order 2
      @media (min-width 1280px)
        img
          width 33px
          height 35px


#politic
  display none
.politic-popup
  width 90%
  height 50%
  background-color #ffffff
  border-radius 10px 10px
  padding 20px 10px
  margin 0 auto
  @media (min-width 1280px)
    width 60%
    padding 25px 20px

  h3
    text-align center
    margin-bottom 15px
    font-size 20px

  p
    color #000000
    font-family "Intro"
    font-size 12px
    line-height 13px
    font-weight 400
    text-transform uppercase
    margin-bottom 10px
    text-align left

.hidden
  display none

.thnx
  width 90%
  height 50%
  margin 0 auto
  display flex
  display -webkit-flex
  justify-content center
  align-items center
  flex-direction column
  @media (min-width 768px)
    flex-direction row
  @media (min-width 1280px)
    width 60%

  img
    margin-bottom 20px
    @media (min-width 768px)
      margin-bottom 0
      margin-right 15px

  h2
    text-align center
    @media (min-width 768px)
      font-size 30px

    br
      display none
      @media (min-width 768px)
        display block



