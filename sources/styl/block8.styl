.block8
  width 100%
  height auto


  .block8-content
    width 100%
    height auto
    justify-content center
    align-items center
    flex-direction column
    padding-top 56px
    padding-bottom 40px
    @media (min-width 1280px)
      flex-direction row

    .block8-head
      width 100%
      height auto

      h2
        margin-bottom 16px

      hr
        margin-bottom 40px

    .map
      width 100%
      height 184px
      margin-bottom 41px
      @media (min-width 768px)
        height 402px
      @media (min-width 1280px)
        width 49%
        height 329px

    .contacts
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      @media (min-width 1280px)
        width 49%

      .phone, .adress, .time-works
        width 100%
        height auto
        margin-bottom 32px
        @media (min-width 768px)
          width 403px

        h3
          color #2d2d2d
          font-size 20px
          font-weight 600
          margin-bottom 12px

        p
          width 100%
          font-size 13px
          font-weight 100
          font-family "Rubik"
          line-height 20px
          margin-bottom 8px
          @media (min-width 768px)
            br
              display none


